<h1 id="title">
  <strong>Title:</strong>
  <%= @post.title.capitalize %>
</h1>

<h2 id="text">
  <strong>Text:</strong>
  <%= @post.text %>
</h2>


<h3>Comments</h3>
<%= render @post.comments %>


<h3>Add a comment:</h3>
<%= render "comments/form" %>

<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back to Posts', posts_path %>